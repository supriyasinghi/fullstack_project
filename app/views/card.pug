doctype html
html(lang='en')
  head
    title Event Planner
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/semantic-ui@2.3.3/dist/semantic.min.css')
    //- script(src ='../public/main.js' type = 'text/javascript').

    style.
      table.ui.celled img { display: inline-block; width:60%}
      footer { margin: 35px 0 15px 0; text-align: center }
  body
    main#main
    h1.ui.center.aligned.header Event Details
    ui.container.center.aligned
        each event in events
            span
                img.center.aligned(src =event.inagelink alt =`${event.eventname}` style='height:300px;')
            span
                div.top #{event.eventname} 
                div #{event.address1}
                div #{event.city}, #{event.state} - #{event.zipcode}
                div #{event.country} 
                    a.ui.inverted.blue.button(href=`/views/${event.eventname}` target='popup' 
                     onclick="window.open('/views/main.pug','popup','width=600,height=400'); return false;")
